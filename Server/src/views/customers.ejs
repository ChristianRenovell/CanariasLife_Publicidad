<% include partials/_header %>
<% if(value==1){ grup = 1} %>
<% if(value==6){ grup = 2} %>
<% if(value==11){ grup = 3} %>
<% if(value==16){ grup = 4} %>
<% if(value==21){ grup = 5} %>
<% if(value==26){ grup = 6} %>
<% if(value==31){ grup = 7} %>
<% if(value==36){ grup = 8} %>
<% if(value==41){ grup = 9} %>
<% if(value==46){ grup = 10} %>
<% if(value==51){ grup = 11} %>
<% if(value==56){ grup = 12} %>
<div class="container-fluid mt-5 text-center">
  <h1 class="mb-4">GRUPO <%= grup %></h1>
  <table class="table table-bordered">
    <thead class="font-weight-bold">
      <tr>
        <td>ID</td>
        <td>NOMBRE BANNER</td>
        <td>BANNER</td>
        <td>LINK BANNER</td>
        <td>NOMBRE VIDEO</td>
        <td>VIDEO</td>
        <td>LINK VIDEO</td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% if (data) { %>
      <% for(var i = 0; i < data.length; i++) { %>
      <tr>
        <td><%= data[i].id %></td>
        <td><%= data[i].nameBanner %></td>
        <td><%= data[i].banner %></td>
        <td><%= data[i].linkBanner %></td>
        <td><%= data[i].nameVideo %></td>
        <td><%= data[i].video %></td>
        <td><%= data[i].linkVideo %></td>
        <td>
          <div class="btn-group" role="group" aria-label="Basic example">
            <% if (data[i].nameVideo ==""){data[i].nameVideo="Promotor sin nombre."}%>
            <% if (data[i].nameBanner ==""){data[i].nameBanner="Promotor sin nombre."}%>
            <label for="mostrar-modal" class="btn btn-info btInfo ml-2">Informe</label>
            <a href="/updateView/<%= data[i].id %>/<%= value %>/<%= value2 %>"><label class="btn btn-warning btInfo ml-2">Editar</label></a>
          </div>
        </td>
      </tr>
      <div class="col-12 mb-3">
        <input id="mostrar-modal" type="radio" name="modal" />
        <input id="cerrar-modal" type="radio" name="modal" />
        <div id="modal">
          <div class="bodyNodal">
            <div class="row">
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-body">
                    <h3 class="font-weight-bold">Seleccione un Rango de Fechas</h3>
                    <hr>
                    <div class="row">
                      <div class="col-md-6 mb-3">
                        <label for="start">Fecha início</label>
                        <input class="form-control" type="date" id="start" name="trip-start"  min="" max="">
                      </div>
                      <div class="col-md-6 mb-3">
                        <label  for="start">Fecha Fin</label>
                        <input class="form-control" type="date" id="end" name="trip-start"  min="" max="">
                      </div>
                    </div>
                    <div class="row">
                      <div class=col-6>
                        <button for="cerrar-modal" onclick="window.location.reload(true)"
                          class="btn btn-danger ml-2">Cancelar</button>
                      </div>
                      <div class="col-6">
                        <a onclick="getDate('<%= data[i].id %>','<%= data[i].nameBanner%>','<%= data[i].nameVideo%>')"
                          class="btn btn-success ml-2">ver informe</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% } %>
      <% } %>
    </tbody>
  </table>
  <div>
    <a class="btn btn-primary" style="width: 20%;" href="/">Atrás</a>
  </div>
</div>
<script>
  function getDate(id,nameB,nameV){
    let dataStart = document.getElementById("start").value
    let dataEnd = document.getElementById("end").value
    console.log(nameV)
    if(Date.parse(dataEnd) < Date.parse(dataStart)) {
    alert("La fecha final debe ser mayor a la fecha inicial");
    }else {
      location.href = `/report/${id}/${nameB}/${nameV}/${dataEnd}/${dataStart}`;
    }
  }
</script>
<style>
 
  .boxB {
    padding: 30px;
    border: solid rgb(196, 196, 196) 1px;
  }

  #modal {
    position: fixed;
    top: -100vh;
    left: 0;
    height: 100vh;
    width: 100vw;
    transition: all 0.5s;
    z-index: 1000;
  }

  #modal2 {
    position: fixed;
    top: -100vh;
    left: 0;
    height: 100vh;
    width: 100vw;
    transition: all 0.5s;
    z-index: 1000;
  }

  a:link,
  a:visited,
  a:active {
    text-decoration: none;
    color: white;
  }

  .bodyNodal {
    background-color: rgb(255, 255, 255);
    width: 35%;
    height: 20%;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    font-size: 1.5em;
    text-align: center;
  }

  .bodyNodal2 {
    background-color: rgb(255, 255, 255);
    width: 35%;
    height: 20%;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    margin: auto;
    font-size: 1.5em;
    text-align: center;
  }

  #mostrar-modal {
    display: none;
  }

  #mostrar-modal:checked~#modal {
    top: 0;
  }

  #cerrar-modal {
    display: none;
  }

  #cerrar-modal:checked~#modal {
    top: -100vh;
  }

  #cerrar-modal:checked+label {
    display: none;
  }

  #mostrar-modal2 {
    display: none;
  }

  #mostrar-modal2:checked~#modal2 {
    top: 0;
  }

  #cerrar-modal2 {
    display: none;
  }

  #cerrar-modal2:checked~#modal2 {
    top: -100vh;
  }

  #cerrar-modal2:checked+label {
    display: none;
  }
</style>
<% include partials/_footer %>